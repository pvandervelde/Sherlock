@model IEnumerable<Sherlock.Web.Intranet.Models.MachineModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h3>Physical machines</h3>
<p>
    @Html.ActionLink("Create New", "CreatePhysicalMachine")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MachineId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
