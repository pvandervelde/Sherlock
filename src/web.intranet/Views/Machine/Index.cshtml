            @Html.DisplayNameFor(model => ((Sherlock.Web.Intranet.Models.PhysicalMachineModel)model).CanStartRemotely)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (Sherlock.Web.Intranet.Models.PhysicalMachineModel item in Model.Where(m => m is Sherlock.Web.Intranet.Models.PhysicalMachineModel))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MachineId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetworkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MacAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OperatingSystemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailableForTesting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanStartRemotely)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditPhysicalMachine", new { id = item.MachineId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MachineId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MachineId })
            </td>
        </tr>
    }
</table>


