@model IEnumerable<Sherlock.Web.Intranet.Models.OperatingSystemModel>

@{
    ViewBag.Title = "Operating systems";
}

<h2>Operating systems</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Service pack
        </th>
        <th>
            Bitness
        </th>
        <th>
            Culture
        </th>
        <th>
            Is used
        </th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServicePack)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PointerSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CultureInfo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsUsed)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.OperatingSystemId }) |
            @Html.ActionLink("Details", "Details", new { id = item.OperatingSystemId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.OperatingSystemId })
        </td>
    </tr>
}
</table>
