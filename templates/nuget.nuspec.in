<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>Sherlock</id>
        <version>${Version}</version>
        <authors>P. van der Velde</authors>
        <owners>P. van der Velde</owners>
        <licenseUrl>http://www.apache.org/licenses/LICENSE-2.0</licenseUrl>
        <projectUrl>https://github.com/pvandervelde/Sherlock</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>
            The binaries for the Sherlock test environment system.
        </description>
        <releaseNotes>
            ${ReleaseNotes}
        </releaseNotes>
    </metadata>
    <files>
        <file src="${DirBin}\Sherlock.Console.exe" target="lib\net45" />
        <file src="${DirBin}\Sherlock.Console.pdb" target="lib\net45" />
        <file src="${DirSrc}\console\**\*.cs" target="src\console" />
        
        <file src="${DirBin}\Sherlock.Executor.exe" target="lib\net45" />
        <file src="${DirBin}\Sherlock.Executor.pdb" target="lib\net45" />
        <file src="${DirSrc}\executor\**\*.cs" target="src\executor" />
        
        <file src="${DirBin}\Sherlock.Service.exe" target="lib\net45" />
        <file src="${DirBin}\Sherlock.Service.pdb" target="lib\net45" />
        <file src="${DirSrc}\service\**\*.cs" target="src\service" />
        
        <file src="${DirBin}\Sherlock.Service.Executor.exe" target="lib\net45" />
        <file src="${DirBin}\Sherlock.Service.Executor.pdb" target="lib\net45" />
        <file src="${DirSrc}\service.executor\**\*.cs" target="src\service.executor" />
        
        <file src="${DirBin}\Sherlock.Service.Master.exe" target="lib\net45" />
        <file src="${DirBin}\Sherlock.Service.Master.pdb" target="lib\net45" />
        <file src="${DirSrc}\service.master\**\*.cs" target="src\service.master" />

        <file src="${DirBin}\Sherlock.Shared.Core.dll" target="lib\net45" />
        <file src="${DirBin}\Sherlock.Shared.Core.pdb" target="lib\net45" />
        <file src="${DirSrc}\shared.core\**\*.cs" target="src\shared.core" />

        <file src="${DirBin}\Sherlock.Shared.DataAccess.dll" target="lib\net45" />
        <file src="${DirBin}\Sherlock.Shared.DataAccess.pdb" target="lib\net45" />
        <file src="${DirSrc}\shared.dataaccess\**\*.cs" target="src\shared.dataaccess" />
        
        <file src="${DirBinWebApi}\Sherlock.Web.Api.dll" target="lib\net45" />
        <file src="${DirBinWebApi}\Sherlock.Web.Api.pdb" target="lib\net45" />
        <file src="${DirSrc}\web.api\**\*.cs" target="src\web.api" />
        <file src="${DirSrc}\web.api\**\*.asax" target="src\web.api" />
        
        <file src="${DirBinWebIntranet}\Sherlock.Web.Intranet.dll" target="lib\net45" />
        <file src="${DirBinWebIntranet}\Sherlock.Web.Intranet.pdb" target="lib\net45" />
        <file src="${DirSrc}\web.intranet\**\*.cs" target="src\web.intranet" />
        <file src="${DirSrc}\web.intranet\**\*.asax" target="src\web.intranet" />
    </files>
</package>